<% if @featured_videos %>
	<% @featured_videos.each do |v| %>
	  <div class="grid_6">
		  <div class="thumbnail">
			<%= link_to image_tag(v.get_youtube_thumbnail, :width => 460, :height => 258), video_path(v) %>
			<div class="title-bar">
				<h3><%= v.title %></h3>
			</div>
		  </div>
	  </div>
	<% end %>
<% end %>

<% @videos.each_slice(6) do |videos| %>
	<% videos.each do |v| %>
	  <div class="grid_6">
		  <div class="thumbnail">
			<%= link_to image_tag(v.get_youtube_thumbnail, :width => 460, :height => 258), video_path(v) %>
			<div class="title-bar">
				<h3><%= v.title %></h3>
			</div>
		  </div>
	  </div>
	<% end %>
<% end %>  
